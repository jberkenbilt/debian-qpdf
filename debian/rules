#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
# To skip tests:
#export DEB_BUILD_OPTIONS=nocheck

export DEB_BUILD_MAINT_OPTIONS = hardening=+all

COMMON_CONFIG = \
  -DCMAKE_BUILD_RPATH_USE_ORIGIN=ON \
  -DUSE_IMPLICIT_CRYPTO=OFF -DREQUIRE_CRYPTO_GNUTLS=ON \
  -DSHOW_FAILED_TEST_OUTPUT=ON -DCMAKE_BUILD_TYPE=RelWithDebInfo \
  -DQTEST_COLOR=OFF
DOC_CONFIG = -DBUILD_DOC=ON -DINSTALL_MANUAL=ON

%:
	dh $@

override_dh_compress:
	dh_compress --exclude examples/ --exclude qpdf-manual.pdf

override_dh_auto_configure-arch:
	dh_auto_configure -- $(COMMON_CONFIG)

override_dh_auto_configure-indep:
	dh_auto_configure -- $(COMMON_CONFIG) $(DOC_CONFIG)

execute_after_dh_installdocs-indep:
	dh_sphinxdoc

override_dh_install:
	rm -rf debian/tmp/usr/share/doc/qpdf/manual-single-page-html
	dh_install
	mkdir -p debian/qpdf/usr/share/doc/qpdf
	(echo 'Complete documentation for qpdf can be found in the qpdf-doc package or'; \
	 echo 'online at https://qpdf.readthedocs.io') \
	 > debian/qpdf/usr/share/doc/qpdf/README-doc.txt
	mkdir -p debian/libqpdf-dev/usr/share/doc/libqpdf-dev
	mv debian/libqpdf-dev/usr/share/doc/qpdf/examples \
	    debian/libqpdf-dev/usr/share/doc/libqpdf-dev/
	cp -p README.md debian/libqpdf-dev/usr/share/doc/libqpdf-dev/README.md
	mkdir -p debian/qpdf/usr/share/bash-completion/completions
	cp completions/bash/qpdf \
	    debian/qpdf/usr/share/bash-completion/completions/qpdf
	mkdir -p debian/qpdf/usr/share/zsh/vendor-completions
	cp completions/zsh/_qpdf \
	    debian/qpdf/usr/share/zsh/vendor-completions/_qpdf
	dh_missing --list-missing
